@model IEnumerable<FlashTyperLibrary.Model.UserModel>

<h1 class="text-center display-4 text-light font-weight-bold">Leaderboards</h1>
<table id="tableLB" class="table table-striped table-dark m-5">
    <tr>
        <th>USERNAME</th>
        <th>WPM</th>
        <th>ACCURACY</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(x => item.Username)
            </td>
            <td>
                @Html.DisplayFor(x => item.WPM)
            </td>
            <td>
                @Html.DisplayFor(x => item.Accuracy)%
            </td>
        </tr>
    }
</table>
