@model FlashTyper_MVC.Models.UserModel

<style>
    #signup {
        margin-left: 14%;
        margin-top: 50px;
        display: block;
        float: left;
    }

    #login {
        margin-right: 14%;
        margin-top: 50px;
        display: block;
        float: right;
    }
</style>

<div id="container">
    <h1 class="display-4 text-center text-light font-weight-bold">Account</h1>
    <div id="signup" class="w-25 text-center">
        <form method="post" asp-controller="Account" asp-action="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="mx-auto w-50 align-content-center text-white-50"></label>
                <input asp-for="Username" autocomplete="off" class="form-control bg-dark text-white" />
                <span asp-validation-for="Username" class="text-danger"></span>
                <span class="text-danger">@ViewBag.signupError</span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="mx-auto w-50 align-content-center text-white-50"></label>
                <input asp-for="Password" autocomplete="off" class="form-control bg-dark text-white" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="mx-auto w-50 align-content-center text-white-50"></label>
                <input asp-for="ConfirmPassword" autocomplete="off" class="form-control bg-dark text-white" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark" />
            </div>
        </form>
    </div>
    <div id="login" class="w-25 text-center">
        <form method="post" asp-controller="Account" asp-action="Login">
            <div class="form-group">
                <span class="text-danger">@ViewBag.loginError</span>
                <label asp-for="Username" class="mx-auto w-50 align-content-center text-white-50"></label>
                <input asp-for="Username" autocomplete="off" class="form-control bg-dark text-white" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="mx-auto w-50 align-content-center text-white-50"></label>
                <input asp-for="Password" autocomplete="off" class="form-control bg-dark text-white" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-dark" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
