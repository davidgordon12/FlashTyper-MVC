@model FlashTyperLibrary.Model.UserModel

<form method="post" asp-action="Logout" asp-controller="Account">
    <div class="text-center">
        <h1 class="display-4 text-light font-weight-bold mb-5">Good work</h1>
        <p class="mx-auto w-50 h5 align-content-center text-white-50 m-5">Let's see your stats</p>
        <table id="tableLB" class="table table-striped table-dark m-5">
            <tr>
                <th>USERNAME</th>
                <th>WPM</th>
                <th>ACCURACY</th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(x => Model.Username)
                </td>
                <td>
                    @Html.DisplayFor(x => Model.WPM)
                </td>
                <td>
                    @Html.DisplayFor(x => Model.Accuracy)%
                </td>
            </tr>
        </table>
    </div>
</form>
